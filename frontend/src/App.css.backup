.app {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
}

.header {
  background-color: #282c34;
  padding: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 3px solid #4CAF50;
}

.header h1 {
  margin: 0;
  font-size: 28px;
}

.connection-status {
  font-size: 14px;
  padding: 8px 16px;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
}

.game-container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.sidebar {
  width: 280px;
  background-color: #1e1e1e;
  padding: 20px;
  overflow-y: auto;
  border-right: 2px solid #333;
}

.sidebar h2 {
  margin-top: 0;
  font-size: 20px;
  color: #4CAF50;
}

.sidebar h3 {
  margin-top: 20px;
  margin-bottom: 10px;
  font-size: 16px;
  color: #61dafb;
}

.player-info {
  background-color: #282c34;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 20px;
}

.player-info p {
  margin: 8px 0;
  font-size: 18px;
}

.tower-selection {
  margin-bottom: 20px;
}

.tower-selection button {
  width: 100%;
  margin: 5px 0;
  padding: 12px;
  font-size: 14px;
  text-align: left;
}

.tower-selection button.selected {
  background-color: #FFD700;
  color: #000;
  font-weight: bold;
}

.game-controls {
  margin-bottom: 20px;
}

.game-controls button {
  width: 100%;
  margin: 5px 0;
}

.players-list {
  background-color: #282c34;
  padding: 15px;
  border-radius: 8px;
}

.player-item {
  padding: 10px;
  margin: 8px 0;
  background-color: #1e1e1e;
  border-radius: 4px;
  border-left: 3px solid #4CAF50;
}

.player-item strong {
  display: block;
  margin-bottom: 4px;
}

.player-item small {
  color: #61dafb;
  margin-left: 5px;
}

.player-item div {
  font-size: 12px;
  margin-top: 4px;
  color: #aaa;
}

.game-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #0d0d0d;
  padding: 20px;
}

canvas {
  border: 3px solid #4CAF50;
  border-radius: 8px;
  cursor: crosshair;
  background-color: #2d5016;
  box-shadow: 0 0 20px rgba(76, 175, 80, 0.3);
}

.game-info {
  margin-top: 20px;
  text-align: center;
  color: #aaa;
}

.game-info p {
  margin: 5px 0;
}

@media (max-width: 1024px) {
  .game-container {
    flex-direction: column;
  }

  .sidebar {
    width: 100%;
    max-height: 200px;
    border-right: none;
    border-bottom: 2px solid #333;
  }

  canvas {
    max-width: 100%;
    height: auto;
  }
}
